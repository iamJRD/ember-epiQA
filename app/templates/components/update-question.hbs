{{#if updateQuestionForm}}
  <h4>Update Question</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title: </label>
        {{input class="textbox" value=title id="title" placeholder=question.title}}
      </div>

      <div class="form-group">
        <label for="author">Author: </label>
        {{input class="textbox" value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="content">Question Content: </label>
        {{textarea rows="10" cols="50" class="textboxArea" value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="note">Notes: </label>
        {{textarea rows="5" cols="50" class="textboxArea" value=note id="note" placeholder=question.note}}
      </div>

      <button {{action 'updateQuestion' question}} class="btn btn-warning">Update</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}} class="btn btn-warning" id="updateQuestionBtn">Update Question</button>
{{/if}}
